{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "lib": ["ES2020", "DOM"],

    "moduleResolution": "Node",

    "allowJs": true,
    "isolatedModules": true,
    "useDefineForClassFields": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strictNullChecks": false,
    "strict": true,
    "noImplicitAny": true,
    "skipLibCheck": true,

    "typeRoots": [
      "./node_modules/@webgpu/types", 
      "./node_modules/@types",
    ],
  },
  "include": ["src/**/*.ts", "node_modules/@webgpu/types/**/*"]
}
