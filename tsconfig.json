{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "lib": ["ES2020", "DOM"],

    "moduleResolution": "Node",

    "allowJs": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strictNullChecks": false,
    "strict": true,
    "noImplicitAny": true,
    "skipLibCheck": true,

    "typeRoots": [
      "./node_modules/@webgpu/types", 
      "./node_modules/@types"
    ],

    "types": ["node"],
  },
  "include": ["src", "node_modules/@webgpu/types/**/*"]
}
